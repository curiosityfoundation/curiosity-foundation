{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@curiosity-foundation/types-messages": [
        "libs/types-messages/src/index.ts"
      ],
      "@curiosity-foundation/service-logger": [
        "libs/service-logger/src/index.ts"
      ],
      "@curiosity-foundation/service-communication": [
        "libs/service-communication/src/index.ts"
      ],
      "@curiosity-foundation/morphic-redux": [
        "libs/morphic-redux/src/index.ts"
      ],
      "@curiosity-foundation/effect-ts-cycle": [
        "libs/effect-ts-cycle/src/index.ts"
      ],
      "@curiosity-foundation/feature-licenses": [
        "libs/feature-licenses/src/index.ts"
      ],
      "@curiosity-foundation/feature-auth": ["libs/feature-auth/src/index.ts"],
      "@curiosity-foundation/util-types": ["libs/util-types/src/index.ts"],
      "@curiosity-foundation/feature-db": ["libs/feature-db/src/index.ts"],
      "@curiosity-foundation/feature-http-server": [
        "libs/feature-http-server/src/index.ts"
      ],
      "@curiosity-foundation/feature-logging": [
        "libs/feature-logging/src/index.ts"
      ],
      "@curiosity-foundation/feature-messaging": [
        "libs/feature-messaging/src/index.ts"
      ],
      "@curiosity-foundation/feature-device-io": [
        "libs/feature-device-io/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
